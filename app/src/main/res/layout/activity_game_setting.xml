<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- title -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:background="#04c4ff">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/setting_btn_back_game"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="設定"
            android:id="@+id/setting_title"
            android:layout_weight="90"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <!-- setting1 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/setting01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="味方チームの人数"
            android:id="@+id/desc_setting01"
            android:layout_weight="90"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|right">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_ourteam_minus"
                android:src="@android:drawable/ic_media_rew"
                android:clickable="true" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/ourteam_num"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="人"
                android:id="@+id/tv_credir01"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_ourteam_plus"
                android:clickable="true"
                android:src="@android:drawable/ic_media_ff" />

        </LinearLayout>

    </LinearLayout>

    <!-- setting2 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/setting02">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="相手チームの人数"
            android:id="@+id/desc_setting_02"
            android:layout_weight="90"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|right">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_opposingteam_minus"
                android:clickable="true" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/opposingteam_num"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="人"
                android:id="@+id/tv_credir02"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_opposingteam_plus"
                android:clickable="true" />
        </LinearLayout>

    </LinearLayout>

    <!-- setting3 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/setting03">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="録画時間"
            android:id="@+id/desc_setting_03"
            android:layout_weight="90"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|right">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_rec_time_minus"
                android:clickable="true" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/rec_time"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="秒"
                android:id="@+id/tv_credir03"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_rec_time_plus"
                android:clickable="true" />/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:id="@+id/setting_btn_save" />
    </LinearLayout>
</LinearLayout>