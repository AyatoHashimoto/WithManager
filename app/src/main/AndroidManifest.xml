<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kohki.withmanager" >

    <!-- Allow Connect Bluetooth -->
    <uses-permittion android:name="android.permittion.BLUETOOTH" />
    <uses-permittion android:name="android.permittion.RLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/withmg_icon2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Player"
            android:label="@string/title_activity_player" >
        </activity>
        <activity android:name=".NewPlayer" >
        </activity>
        <activity android:name=".SelectSynchro" >
        </activity>
        <activity
            android:name=".Title"
            android:label="@string/title_activity_title"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".Synchro" >
        </activity>
    </application>

</manifest>
